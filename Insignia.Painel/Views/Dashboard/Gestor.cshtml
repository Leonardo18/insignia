@model Insignia.Painel.ViewModels.ViewModelDashboardGestor
@{
    ViewBag.Title = "Gestor";
    Layout = "~/Views/Shared/LayoutPrincipal.cshtml";
}
@Styles.Render("~/Badges/styles")

<div class="page-title">
    <div class="title_left">
        <h3>Dashboard - @Session["UsuarioNome"]</h3>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-4 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-bars"></i> Filtros</h2>
                <ul class="nav navbar-right panel_toolbox" style="min-width: 0px;">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @using (Html.BeginForm("Gestor", "Dashboard", FormMethod.Get, new { @class = "form-horizontal form-label-left" }))
                {
                    <div class="form-group">                       
                        <label class="control-label col-md-1 col-sm-3 col-xs-12">
                            Usuário:
                        </label>
                        <div class="col-md-3 col-sm-6 col-xs-12">
                            @Html.DropDownList("FiltroUsuario", (List<SelectListItem>)ViewBag.Usuarios, "Todos Usuários", new { @class = "select2_multiple form-control" })
                        </div>
                        <div>
                            <button class="btn btn-primary" type="submit">Filtrar</button>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Perfil</h2>
                <ul class="nav navbar-right panel_toolbox" style="min-width: 0px;">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="col-md-12 col-sm12 col-xs-12">
                    <div class="profile_title">
                        <div class="col-md-6">
                            <h2>Relatório de Tarefas</h2>
                        </div>
                    </div>
                    <!-- start of user-activity-graph -->
                    <div id="graph_bar" style="width:100%; height:280px;"></div>
                    <!-- end of user-activity-graph -->
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-4 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-bars"></i> Gráfico Radar</h2>
                <ul class="nav navbar-right panel_toolbox" style="min-width: 0px;">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div id="echart_sonar" style="height:370px;"></div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Badges Básicas</h2>
                <ul class="nav navbar-right panel_toolbox" style="min-width: 0px;">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @foreach (var item in Model.ListBadgeBasicas)
            {
                if (item.Adquirida)
                {
                        <div class="badge-sistema" style="cursor: pointer;">
                            <div class="wrap">
                                <div class="side-a" style="opacity: 0.9;">
                                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" x="0px" y="0px" width="169px" height="181px" viewBox="0 0 216 232">
                                        <path fill="#2B2B2B" d="M207,0C171.827,0.001,43.875,0.004,9.003,0c-5.619-0.001-9,3.514-9,9c0,28.23-0.006,151.375,0,169    c0.005,13.875,94.499,54,107.999,54S216,191.57,216,178V9C216,3.298,212.732,0,207,0z" />
                                    </svg>
                                    <p class="title" style="color: @item.CorFonte; background: @item.Cor">@item.Titulo</p>
                                    @if (ViewBag.UsuarioID == 0)
                                    {
                                        <p class="subtitle">@item.Progresso %</p>
                                    }
                                    else
                                    {
                                        <p class="subtitle"></p>
                                    }
                                </div>
                                <div class="side-b">
                                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" x="0px" y="0px" width="169px" height="181px" viewBox="0 0 216 232">
                                        <path fill="#2B2B2B" d="M207,0C171.827,0.001,43.875,0.004,9.003,0c-5.619-0.001-9,3.514-9,9c0,28.23-0.006,151.375,0,169    c0.005,13.875,94.499,54,107.999,54S216,191.57,216,178V9C216,3.298,212.732,0,207,0z" />
                                    </svg>
                                    <p class="title" style="background: rgb(43, 43, 43);"></p>
                                    <p class="descricao">@item.Descricao</p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="x_panel">
            <div class="x_title">
                <h2>Badges Intermediárias</h2>
                <ul class="nav navbar-right panel_toolbox" style="min-width: 0px;">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @foreach (var item in Model.ListBadgeIntermediarias)
            {
                if (item.Adquirida)
                {
                        <div class="badge-sistema" style="cursor: pointer;">
                            <div class="wrap">
                                <div class="side-a" style="opacity: 0.9;">
                                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" x="0px" y="0px" width="169px" height="181px" viewBox="0 0 216 232">
                                        <path fill="#2B2B2B" d="M207,0C171.827,0.001,43.875,0.004,9.003,0c-5.619-0.001-9,3.514-9,9c0,28.23-0.006,151.375,0,169    c0.005,13.875,94.499,54,107.999,54S216,191.57,216,178V9C216,3.298,212.732,0,207,0z" />
                                    </svg>
                                    <p class="title" style="color: @item.CorFonte; background: @item.Cor">@item.Titulo</p>
                                    @if (ViewBag.UsuarioID == 0)
                                    {
                                        <p class="subtitle">@item.Progresso %</p>
                                    }
                                    else
                                    {
                                        <p class="subtitle"></p>
                                    }
                                </div>
                                <div class="side-b">
                                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" x="0px" y="0px" width="169px" height="181px" viewBox="0 0 216 232">
                                        <path fill="#2B2B2B" d="M207,0C171.827,0.001,43.875,0.004,9.003,0c-5.619-0.001-9,3.514-9,9c0,28.23-0.006,151.375,0,169    c0.005,13.875,94.499,54,107.999,54S216,191.57,216,178V9C216,3.298,212.732,0,207,0z" />
                                    </svg>
                                    <p class="title" style="background: rgb(43, 43, 43);"></p>
                                    <p class="descricao">@item.Descricao</p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
        <div class="x_panel">
            <div class="x_title">
                <h2>Badges Avançadas</h2>
                <ul class="nav navbar-right panel_toolbox" style="min-width: 0px;">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @foreach (var item in Model.ListBadgeAvancadas)
            {
                if (item.Adquirida)
                {
                        <div class="badge-sistema" style="cursor: pointer;">
                            <div class="wrap">
                                <div class="side-a" style="opacity: 0.9;">
                                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" x="0px" y="0px" width="169px" height="181px" viewBox="0 0 216 232">
                                        <path fill="#2B2B2B" d="M207,0C171.827,0.001,43.875,0.004,9.003,0c-5.619-0.001-9,3.514-9,9c0,28.23-0.006,151.375,0,169    c0.005,13.875,94.499,54,107.999,54S216,191.57,216,178V9C216,3.298,212.732,0,207,0z" />
                                    </svg>
                                    <p class="title" style="color: @item.CorFonte; background: @item.Cor">@item.Titulo</p>
                                    @if (ViewBag.UsuarioID == 0)
                                    {
                                        <p class="subtitle">@item.Progresso %</p>
                                    }
                                    else
                                    {
                                        <p class="subtitle"></p>
                                    }
                                </div>
                                <div class="side-b">
                                    <svg xmlns="http://www.w3.org/2000/svg" version="1.1" x="0px" y="0px" width="169px" height="181px" viewBox="0 0 216 232">
                                        <path fill="#2B2B2B" d="M207,0C171.827,0.001,43.875,0.004,9.003,0c-5.619-0.001-9,3.514-9,9c0,28.23-0.006,151.375,0,169    c0.005,13.875,94.499,54,107.999,54S216,191.57,216,178V9C216,3.298,212.732,0,207,0z" />
                                    </svg>
                                    <p class="title" style="background: rgb(43, 43, 43);"></p>
                                    <p class="descricao">@item.Descricao</p>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
<!-- /page content -->

@Scripts.RenderFormat("<script type=\"text/javascript\" src=\"{0}\" charset=\"iso-8859-1\"></script>", "~/Graficos/scripts")
@Scripts.Render("~/Badges/scripts")
<!-- Charts -->
<script>
    $(function () {
        Morris.Bar({
            element: 'graph_bar',
            data: [
              { "periodo": "Jan", "Tarefas Trabalhadas": @Model.TarefasMes[0] },
              { "periodo": "Fev", "Tarefas Trabalhadas": @Model.TarefasMes[1] },
              { "periodo": "Mar", "Tarefas Trabalhadas": @Model.TarefasMes[2] },
              { "periodo": "Abr", "Tarefas Trabalhadas": @Model.TarefasMes[3] },
              { "periodo": "Mai", "Tarefas Trabalhadas": @Model.TarefasMes[4] },
              { "periodo": "Jun", "Tarefas Trabalhadas": @Model.TarefasMes[5] },
              { "periodo": "Jul", "Tarefas Trabalhadas": @Model.TarefasMes[6] },
              { "periodo": "Ago", "Tarefas Trabalhadas": @Model.TarefasMes[7] },
              { "periodo": "Set", "Tarefas Trabalhadas": @Model.TarefasMes[8] },
              { "periodo": "Out", "Tarefas Trabalhadas": @Model.TarefasMes[9] },
              { "periodo": "Nov", "Tarefas Trabalhadas": @Model.TarefasMes[10] },
              { "periodo": "Dez", "Tarefas Trabalhadas": @Model.TarefasMes[11] }
            ],
            xkey: 'periodo',
            hideHover: 'auto',
            barColors: ['#5A738E', '#5A738E', '#5A738E', '#5A738E'],
            ykeys: ['Tarefas Trabalhadas', ''],
            labels: ['Tarefas Trabalhadas', ''],
            xLabelAngle: 60,
            resize: true
        });

        $MENU_TOGGLE.on('click', function () {
            $(window).resize();
        });
    });
</script>
<!-- /Charts -->
<!-- Height x_Panel -->
<script>
    $(document).ready(function () {
        var x = $('.x_panel')[2];
        var y = $('.x_panel')[1];

        x = x.offsetHeight;

        if (y.offsetHeight < x) {
            $(y).css('height', x + 'px');
        }
    });
</script>
<!-- /Height x_Panel -->
<!-- Gráfico Radar -->
<script>
    var theme = {
        color: [
            '#23527c', '#34495E', '#BDC3C7', '#3498DB',
            '#9B59B6', '#8abb6f', '#759c6a', '#bfd3b7'
        ],

        title: {
            itemGap: 8,
            textStyle: {
                fontWeight: 'normal',
                color: '#23527c'
            }
        },

        dataRange: {
            color: ['#1f610a', '#97b58d']
        },

        toolbox: {
            color: ['#408829', '#408829', '#408829', '#408829']
        },

        tooltip: {
            backgroundColor: 'rgba(0,0,0,0.5)',
            axisPointer: {
                type: 'line',
                lineStyle: {
                    color: '#408829',
                    type: 'dashed'
                },
                crossStyle: {
                    color: '#408829'
                },
                shadowStyle: {
                    color: 'rgba(200,200,200,0.3)'
                }
            }
        },

        dataZoom: {
            dataBackgroundColor: '#eee',
            fillerColor: 'rgba(64,136,41,0.2)',
            handleColor: '#408829'
        },
        grid: {
            borderWidth: 0
        },

        categoryAxis: {
            axisLine: {
                lineStyle: {
                    color: '#408829'
                }
            },
            splitLine: {
                lineStyle: {
                    color: ['#eee']
                }
            }
        },

        valueAxis: {
            axisLine: {
                lineStyle: {
                    color: '#408829'
                }
            },
            splitArea: {
                show: true,
                areaStyle: {
                    color: ['rgba(250,250,250,0.1)', 'rgba(200,200,200,0.1)']
                }
            },
            splitLine: {
                lineStyle: {
                    color: ['#eee']
                }
            }
        },
        timeline: {
            lineStyle: {
                color: '#408829'
            },
            controlStyle: {
                normal: { color: '#408829' },
                emphasis: { color: '#408829' }
            }
        },

        k: {
            itemStyle: {
                normal: {
                    color: '#68a54a',
                    color0: '#a9cba2',
                    lineStyle: {
                        width: 1,
                        color: '#408829',
                        color0: '#86b379'
                    }
                }
            }
        },
        map: {
            itemStyle: {
                normal: {
                    areaStyle: {
                        color: '#ddd'
                    },
                    label: {
                        textStyle: {
                            color: '#c12e34'
                        }
                    }
                },
                emphasis: {
                    areaStyle: {
                        color: '#99d2dd'
                    },
                    label: {
                        textStyle: {
                            color: '#c12e34'
                        }
                    }
                }
            }
        },
        force: {
            itemStyle: {
                normal: {
                    linkStyle: {
                        strokeColor: '#408829'
                    }
                }
            }
        },
        chord: {
            padding: 4,
            itemStyle: {
                normal: {
                    lineStyle: {
                        width: 1,
                        color: 'rgba(128, 128, 128, 0.5)'
                    },
                    chordStyle: {
                        lineStyle: {
                            width: 1,
                            color: 'rgba(128, 128, 128, 0.5)'
                        }
                    }
                },
                emphasis: {
                    lineStyle: {
                        width: 1,
                        color: 'rgba(128, 128, 128, 0.5)'
                    },
                    chordStyle: {
                        lineStyle: {
                            width: 1,
                            color: 'rgba(128, 128, 128, 0.5)'
                        }
                    }
                }
            }
        },
        gauge: {
            startAngle: 225,
            endAngle: -45,
            axisLine: {
                show: true,
                lineStyle: {
                    color: [[0.2, '#86b379'], [0.8, '#68a54a'], [1, '#408829']],
                    width: 8
                }
            },
            axisTick: {
                splitNumber: 10,
                length: 12,
                lineStyle: {
                    color: 'auto'
                }
            },
            axisLabel: {
                textStyle: {
                    color: 'auto'
                }
            },
            splitLine: {
                length: 18,
                lineStyle: {
                    color: 'auto'
                }
            },
            pointer: {
                length: '90%',
                color: 'auto'
            },
            title: {
                textStyle: {
                    color: '#333'
                }
            },
            detail: {
                textStyle: {
                    color: 'auto'
                }
            }
        },
        textStyle: {
            fontFamily: 'Arial, Verdana, sans-serif'
        }
    };

    var echartRadar = echarts.init(document.getElementById('echart_sonar'), theme);

    echartRadar.setOption({
        title: {
            text: 'Competências'
            //subtext: 'Subtitulo'
        },
        tooltip: {
            trigger: 'item'
        },
        legend: {
            orient: 'vertical',
            x: 'right',
            y: 'bottom',
            data: ['Allocated Budget', 'Actual Spending']
        },
        toolbox: {
            show: true,
            feature: {
                restore: {
                    show: false,
                    title: "Atualizar"
                },
                saveAsImage: {
                    show: true,
                    title: "Salvar Imagem"
                }
            }
        },
        polar: [{
            indicator: [
                @foreach (var item in Model.ListCompetencias)
                {
                    @:{
                        @:text: '@Html.Raw(@item.Nome)',
                        @:max: 100
                    @:},
                }
            ]
        }],
        calculable: true,
        series: [{
            name: 'Competências',
            type: 'radar',
            data: [{
                value: [
                    @foreach (var item in Model.ListCompetencias)
                    {
                        @item.Pontos @:,
                    }
                ],
            },
            ]
        }]
    });
</script>
<!-- /Gráfico Radar -->
