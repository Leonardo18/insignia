@model Insignia.Model.Setor.Setor
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/LayoutPrincipal.cshtml";
}

<!-- /page content -->
<div class="page-title">
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2 id="TituloPagina">Exibir Setor</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a onclick="Javascript:Editar();"><i class="fa fa-wrench"></i></a>
                    </li>
                    <li>
                        <a href="@Url.Action("Remover", null, new { ID = Model.ID, controller = "Setores" }, Request.Url.Scheme)"><i c><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                @using (Html.BeginForm("Editar", "Setores", FormMethod.Post, new { @class = "form-horizontal form-label-left", ID = "FormEditar" }))
                {
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            Título: <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBox("Nome", Model.Nome, new { @class = "form-control col-md-7 col-xs-12", placeholder = "Nome", Required = "", @readonly = "readonly" })
                            @Html.ValidationMessageFor(modelItem => modelItem.Nome, null, new { @class = "text-danger" })
                        </div><span class="glyphicon glyphicon-info-sign" data-toggle="tooltip" data-placement="right" title="Este campo indica qual o nome da competência."></span>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-primary" type="submit" disabled="disabled" id="Salvar">Salvar</button>
                        <button class="btn btn-default submit" type="button" onclick="location.href='@Url.Action("Listar", "Setores")'" Badg data-dismiss="modal">Voltar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- /page content -->

<!-- Habilita Editar -->
<script>
    function Editar() {

        //Muda titulo da página de Exibir Badges para Editar Badges
        $('#TituloPagina').html("Editar Setor");

        //Habilita os campos do formulário para edição e o botão salvar
        $("#FormEditar *").removeAttr("readonly");
        $("#FormEditar *").removeAttr("disabled");
    }
</script>
<!-- /Habilita Editar -->
