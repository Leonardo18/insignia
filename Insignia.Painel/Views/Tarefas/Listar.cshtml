<!-- Loader -->
<script type="text/javascript" language="javascript">
    var page = 1, moving = false;
    var animationIteration = "animationiteration webkitAnimationIteration mozAnimationIteration oAnimationIteration oanimationiteration",
        transitionEnd = "transitionend webkitTransitionEnd oTransitionEnd otransitionend MSTransitionEnd";
    $(".load-more").on("click", function () {
        if (moving == false) {
            moving = true;
            $(".load-more").addClass("active");
            setTimeout(function () {
                $(".load-more").one(animationIteration, function () {
                    $(".load-more").removeClass("active");
                    $(".load-more").one(transitionEnd, function () {
                        page++;
                        moving = false;
                    });
                });
            }, 2000);
        }
    });
</script>
<!-- /Loader -->
<!-- LoadMore -->
<script>
    function LoadMore(tarefaStatus, index) {
        $.ajax({
            type: 'GET',
            url: 'CarregarMais',
            dataType: 'json',
            async: true,
            data: { 'tarefaStatus': tarefaStatus, 'index': 5 },
            success: function (Dado) {
                HtmlTarefas(Dado.list);
            },
            error: function (Dado) {
                console.log(Dado);
            }
        });
    }


    function HtmlTarefas(listTarefas) {
        var list = listTarefas;

        $.each(list, function (index, value) {
            alert(value.Anexo);
        });
    }

</script>
