<!-- Loader -->
<script type="text/javascript" language="javascript">
    var page = 1, moving = false;
    var animationIteration = "animationiteration webkitAnimationIteration mozAnimationIteration oAnimationIteration oanimationiteration",
        transitionEnd = "transitionend webkitTransitionEnd oTransitionEnd otransitionend MSTransitionEnd";
    function Loader(elem) {
        if (moving == false) {
            moving = true;
            $(elem).addClass("active");
            setTimeout(function () {
                $(elem).one(animationIteration, function () {
                    $(elem).removeClass("active");
                    $(elem).one(transitionEnd, function () {
                        page++;
                        moving = false;
                    });
                    moving = false;
                });
            }, 2000);
        }
    }
</script>
<!-- /Loader -->
<!-- LoadMore -->
<script>
    function LoadMore(tarefaStatus, index) {
        $.ajax({
            type: 'GET',
            url: 'CarregarMais',
            dataType: 'json',
            async: true,
            data: { 'tarefaStatus': tarefaStatus, 'index': index },
            success: function (Dado) {
                setTimeout(function () { HtmlTarefas(tarefaStatus, Dado.list) }, 2000);
            },
            error: function (Dado) {
                console.log(Dado);
            }
        });
    }


    function HtmlTarefas(tarefaStatus, listTarefas) {
        var list = listTarefas;
        var primeiroID = "";

        $.each(list, function (index, value) {
            if (primeiroID === "")
                primeiroID = value.ID;

            var htmlTarefa = "<ul class=\"list-unstyled timeline " + tarefaStatus + "\" id=" + value.ID + ">\
                                <li>\
                                    <div class=\"block\">\
                                        <div class=\"tags\">\
                                            <a href=\"Editar/" + value.ID + "\" class=\"tag\">\
                                                <span title=\"Data prevista de término\">" + moment(value.Termino).format("DD/MM/YYYY") + "</span>\
                                            </a>\
                                        </div>\
                                        <div class=\"block_content\">\
                                            <h2 class=\"title\">\
                                                <a>" + value.Titulo + "</a>\
                                            </h2>\
                                            <div class=\"byline\">\
                                                <span>Criado </span> por <a>@Session["UsuarioNome"]</a><span> na data de " + moment(value.CriadoEm).format("DD/MM/YYYY") + "</span>\
                                            </div>\
                                            <p class=\"excerpt\">\
                                            " + value.Resumo + "<a href=\"Editar/" + value.ID + "\">&nbsp;Ler&nbsp;Mais</a>\
                                            </p>\
                                        </div>\
                                    </div>\
                                </li>\
                            </ul>";
            $(htmlTarefa).insertBefore("#LoadMore" + tarefaStatus);
        });

        if (list.length < 5) {
            $("#" + tarefaStatus).find('div span.load-more').hide();
        }

        if (tarefaStatus == "Fazer") {
            document.getElementById('indexFazer').value = Number(document.getElementById('indexFazer').value) + 5;
        }
        else if (tarefaStatus == "Andamento") {
            document.getElementById('indexAndamento').value = Number(document.getElementById('indexAndamento').value) + 5;
        }
        else if (tarefaStatus == "Finalizada") {
            document.getElementById('indexFinalizada').value = Number(document.getElementById('indexFinalizada').value) + 5;
        }

        $('html, body').animate({
            scrollTop: $("#" + primeiroID).offset().top - 100
        }, 1000);
    }
</script>
