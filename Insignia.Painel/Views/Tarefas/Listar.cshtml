@model Insignia.Painel.ViewModels.ViewModelTarefa
@{
    ViewBag.Title = "Listar";
    Layout = "~/Views/Shared/LayoutPrincipal.cshtml";
}

<div class="title_left" style="margin-bottom: 20px;">
    <h3>Tarefas</h3>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-bars"></i> Tarefas Cadastradas</h2>
                <ul class="nav navbar-right panel_toolbox" style="min-width: 0px;">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <div class="" role="tabpanel" data-example-id="togglable-tabs">
                    <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                        <li role="presentation" class="active">
                            <a href="#tab_content1" id="fazer-tab" role="tab" data-toggle="tab" aria-expanded="true">Tarefas à Fazer</a>
                        </li>
                        <li role="presentation" class="">
                            <a href="#tab_content2" role="tab" id="andamento-tab" data-toggle="tab" aria-expanded="false">Tarefas em Andamento</a>
                        </li>
                        <li role="presentation" class="">
                            <a href="#tab_content3" role="tab" id="finalizadas-tab2" data-toggle="tab" aria-expanded="false">Tarefas Finalizadas</a>
                        </li>
                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="fazer-tab">
                            @foreach (var item in Model.ListFazer)
                            {
                                <ul class="list-unstyled timeline">
                                    <li>
                                        <div class="block">
                                            <div class="tags">
                                                <a href="@Url.Action("../Tarefas/Editar", null, new { ID = item.ID, controller = "Tarefas" }, Request.Url.Scheme)" class="tag">
                                                    <span title="Data prevista de término">@item.Termino</span>
                                                </a>
                                            </div>
                                            <div class="block_content">
                                                <h2 class="title">
                                                    <a>@item.Titulo</a>
                                                </h2>
                                                <div class="byline">
                                                    <span>Criado as @Convert.ToDateTime(item.CriadoEm).Hour Horas</span> por <a>@Session["UsuarioNome"]</a>
                                                </div>
                                                <p class="excerpt">
                                                    @item.Resumo<a href="@Url.Action("../Tarefas/Editar", null, new { ID = item.ID, controller = "Tarefas" }, Request.Url.Scheme)">&nbsp;Ler&nbsp;Mais</a>
                                                </p>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            }
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="andamento-tab">
                            @foreach (var item in Model.ListAndamento)
                            {
                                <ul class="list-unstyled timeline">
                                    <li>
                                        <div class="block">
                                            <div class="tags">
                                                <a href="@Url.Action("../Tarefas/Editar", null, new { ID = item.ID, controller = "Tarefas" }, Request.Url.Scheme)" class="tag">
                                                    <span title="Data prevista de término">@item.Termino</span>
                                                </a>
                                            </div>
                                            <div class="block_content">
                                                <h2 class="title">
                                                    <a>@item.Titulo</a>
                                                </h2>
                                                <div class="byline">
                                                    <span>Criado as @Convert.ToDateTime(item.CriadoEm).Hour Horas</span> por <a>@Session["UsuarioNome"]</a>
                                                </div>
                                                <p class="excerpt">
                                                    @item.Resumo<a href="@Url.Action("../Tarefas/Editar", null, new { ID = item.ID, controller = "Tarefas" }, Request.Url.Scheme)">&nbsp;Ler&nbsp;Mais</a>
                                                </p>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            }
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="tab_content3" aria-labelledby="finalizadas-tab">
                            @foreach (var item in Model.ListFinalizadas)
                            {
                                <ul class="list-unstyled timeline">
                                    <li>
                                        <div class="block">
                                            <div class="tags">
                                                <a href="@Url.Action("../Tarefas/Editar", null, new { ID = item.ID, controller = "Tarefas" }, Request.Url.Scheme)" class="tag">
                                                    <span title="Data prevista de término">@item.Termino</span>
                                                </a>
                                            </div>
                                            <div class="block_content">
                                                <h2 class="title">
                                                    <a>@item.Titulo</a>
                                                </h2>
                                                <div class="byline">
                                                    <span>Criado as @Convert.ToDateTime(item.CriadoEm).Hour Horas</span> por <a>@Session["UsuarioNome"]</a>
                                                </div>
                                                <p class="excerpt">
                                                    @item.Resumo<a href="@Url.Action("../Tarefas/Editar", null, new { ID = item.ID, controller = "Tarefas" }, Request.Url.Scheme)">&nbsp;Ler&nbsp;Mais</a>
                                                </p>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            }
                        </div>
                    </div>
                </div>
                <div class="Adicionar-Fixo">
                    <a href="@Url.Action("../Tarefas/Adicionar", null, new { controller = "Tarefas" }, Request.Url.Scheme)" style="display: table-cell; vertical-align: middle;">
                        <i class="fa fa-plus" title="Adicionar Badge" style="font-size: 2em; vertical-align: middle;"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
